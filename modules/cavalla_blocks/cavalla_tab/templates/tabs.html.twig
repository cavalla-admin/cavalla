
{% for value in tab_header %}
<button class="nav-link {{ loop.first ? 'active' }} {{ value.column }}" id="{{ value.tab_id }}" data-id="#{{ value.tab_panel_id }}" type="button" role="tab" aria-controls="" aria-selected="true">
      <li class="nav-item" role="presentation">
            <div class="container">
                  <div class="row">
                        {% if value.icon[0]['image'] %}
                        <div class="col col-3 align-self-center">
                              <img src="{{ value.icon[0]['image'] }}" alt="{{ value.icon_alt }}" width="100%"  />
                        </div>
                        {% endif %}
                        <div class="col align-self-center {{ value.icon[0]['image'] ?  'col-9 text-start' :  'col-12 text-center' }}">
                              <h4>{{ value.title }}</h4>
                        </div>
                  </div>
            </div>
      </li>
</button>
{% endfor %}