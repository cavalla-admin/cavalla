<div class="mt-4 cavalla_tm" id="{{ id_name }}">
	<div class="row d-flex justify-content-center align-items-center">
		{% for item in site_blocks %}

			{% if item.media %}
				<div class="col">
					{% if item.media.0.bundle == "remote_video" %}
						<iframe width="100%" height="100%" src="{{ item.media.0.url }}" title="{{ item.media.0.title }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					{% else %}
						<img src="{{ item.media.0.url }}" alt="{{ item.media.0.alt }}" width="100%"/>
					{% endif %}
				</div>
			{% endif %}

			{% if item.copy %}
				<div class="col">

					{% if item.copy.eyebrow %}
						<h6>{{ item.copy.eyebrow }}</h6>
					{% endif %}

					{% if item.copy.header %}
						<h2>{{ item.copy.header }}</h2>
					{% endif %}

					{% if item.copy.body %}
						<div>{{ item.copy.body | raw }}</div>
					{% endif %}

				</div>
			{% endif %}

		{% endfor %}
	</div>
</div>
